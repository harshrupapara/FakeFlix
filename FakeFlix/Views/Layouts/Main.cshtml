@using Sitecore.Mvc;
@using Sitecore.Mvc.Presentation;
@model Sitecore.Mvc.Presentation.RenderingModel

@{
    var faviconUrl = "";
    Sitecore.Data.Items.Item settingItem = FakeFlix.Utilities.SettingsControl.GetSettingsControlItem();

    Sitecore.Data.Fields.ImageField favicon = settingItem.Fields["Favicon"];
    if (favicon.MediaItem == null)
    {
        faviconUrl = "/";
    }
    else
    {
        faviconUrl = Sitecore.Resources.Media.MediaManager.GetMediaUrl(favicon.MediaItem);
    }

}

